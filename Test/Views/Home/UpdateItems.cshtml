@model ViewModelForForm
     
    <div>
        <form asp-action="UpdateItems" asp-controller="Home" method="post" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="comparisonName">Name car</label>
                <input type="text" asp-for="comparisonName" class="form-control" placeholder="Car name">
            </div>
            <div class="form-group">
                <label asp-for="Name">New name</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="New car name">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>